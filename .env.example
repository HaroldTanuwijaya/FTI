# Environment Variables Template
# Copy this to .env and fill in your values

# Application
SECRET_KEY=your-secret-key-here-change-this-in-production
FLASK_ENV=production

# MongoDB Atlas Connection (Free Tier)
# Get this from: https://cloud.mongodb.com
# Format: mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/fti_db?retryWrites=true&w=majority
MONGO_URI=mongodb://localhost:27017/fti_db

# Optional: Port (default 5000)
PORT=5000
